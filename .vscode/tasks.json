{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan Install",
            "type": "shell",
            "command": "conan install . --build=missing",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "-j"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "CMake Configure"
            ]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/run_tests.sh",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Generate Docs",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/generate_docs.sh",
            "problemMatcher": []
        }
    ]
}